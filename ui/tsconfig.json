{
	"compilerOptions": {
		"baseUrl": "src",
		"checkJs": true,
		"target": "esnext",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"module": "esnext",
		"strict": true,
		"jsx": "react",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"~App": ["./App/index.ts"],
			"~App/*": ["./App/*"],
			"~Assets/*": ["./Assets"],
			"~Assets/Icons": ["./Assets/Icons/index.ts"],
			"~Components/*": ["./Components/*"],
			"~Pages/*": ["./Pages/*"],
			"~Shared/*": ["./Shared/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
